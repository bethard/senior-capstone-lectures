\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

% Title page: default

\defbeamertemplate*{title page}{defaultcasc}[1][]
{
  \vbox{}
  \vfill
  \begin{centering}
    %~ \hfill\includegraphics[height=2em]{uablogo.jpg}\\
    {\color{uabgreen}\rule{\linewidth}{2pt}}
    \begin{beamercolorbox}[sep=8pt,center,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}%
    \\[-1em]
    {\color{uabgreen}\rule{\linewidth}{2pt}}
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,center,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    {\footnotesize
      \includegraphics[height=4em]{uablogo.jpg}
      \vfill
      Department of Computer and Information Sciences \\
      University of Alabama at Birmingham
    }
    \begin{beamercolorbox}[sep=8pt,center,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,center,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}\vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \end{centering}
  \vfill
}

% Arrows
\newcommand{\garrow}{{\color{uabgreen} \Pisymbol{pzd}{217}}}
\newcommand{\gresarrow}{{\large\color{uabgreen} \Pisymbol{pzd}{229}}}
\newcommand{\ga}{\hspace{1cm}\garrow}
\newcommand{\gad}{\begin{rotate}{-90}{\Large\color{uabgreen}\Pisymbol{pzd}{225}}\end{rotate}}
\newcommand{\fa}{{\color{uabgreen}\Pisymbol{pzd}{225}}}
\newcommand{\arbox}[1]{
  \begin{itemize}
  \item[\fa]\hspace{-.5em}#1
  \end{itemize}
}
\newcommand{\minibox}[2]{\begin{minipage}{#1}\raggedright #2\end{minipage}}
% Result
\newcommand{\resbox}[1]{
  \begin{itemize}
  \item[\gresarrow] #1
  \end{itemize}
}


